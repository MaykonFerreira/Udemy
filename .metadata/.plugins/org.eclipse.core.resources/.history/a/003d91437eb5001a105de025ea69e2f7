package entities;

public class Aluno {
	public String Aluno;
	public double n1;
	public double n2;
	public double n3;
	

	public String Resultado() {
		double media = n1  + n2 + n3;
		System.out.println(media);
		if ( media >= 60.00) {
			return "Final Grade = " + String.format("%.2f", (media)) + " \nPASS" ;
		}
		else {
			return "Final Grade = " + String.format("%.2f", (media)) + " \nFAILED \n Missing %.2f" + (60 - media) ;	
		}
			
		
	}
}
